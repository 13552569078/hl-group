{
  "private": true,
  "packageManager": "pnpm@6.20.2",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "publishConfig": {
    "registry": "http://nexus.cestc.cn/repository/fx-npm-hosted/"
  },
  "scripts": {
    "gen:version": "sucrase-node scripts/gen-version.ts",
    "clean": "pnpm run clean:lib && pnpm run clean -r --stream",
    "clean:lib": "rimraf dist",
    "clean:website": "rimraf website-dist",
    "build": "pnpm gen:version && gulp --require sucrase/register/ts -f build/gulpfile.ts",
    "format": "pnpm format:scss",
    "format:scss": "prettier --write **/*.scss",
    "lint": "eslint ./packages --ext .vue,.js,.ts",
    "lint-fix": "eslint --fix ./packages --ext .vue,.js,.ts",
    "website-build": "pnpm run clean:website && cd website && vite build",
    "website-dev": "cd website && vite",
    "prepare": "husky install",
    "postinstall": "pnpm gen:version",
    "preinstall": "npx only-allow pnpm -y",
    "upload": "sh ./scripts/upload.sh",
    "pub": "sh ./scripts/publish.sh",
    "mypub": "sh ./scripts/publishhost.sh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "hongluan-business-ui": "^4.2.0",
    "hongluan-ui": "^2.2.3"
  },
  "dependencies": {
    "@hongluan-ui/icons": "^1.4.6",
    "@fx-front-framework/components": "workspace:*",
    "@fx-front-framework/directives": "workspace:*",
    "@fx-front-framework/hooks": "workspace:*",
    "@fx-front-framework/theme": "workspace:*",
    "@fx-front-framework/tokens": "workspace:*",
    "@fx-front-framework/utils": "workspace:*",
    "dayjs": "^1.11.5",
    "echarts": "^5.3.3",
    "fx-front-utils": "^1.0.1",
    "hongluan-hooks": "^1.1.7",
    "lodash": "^4.17.21",
    "pnpm": "^6.26.0"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@pnpm/find-workspace-packages": "3.1.21",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^7.5.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@sucrase/jest-plugin": "^2.1.1",
    "@types/gulp": "^4.0.9",
    "@types/jest": "27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/sass": "^1.16.1",
    "@types/through2": "^2.0.36",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vitejs/plugin-vue-jsx": "^1.3.7",
    "@vue/compiler-sfc": "^3.2.20",
    "@vue/test-utils": "2.0.0-rc.16",
    "chalk": "^4.1.2",
    "components-helper": "^1.0.4",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "~0.13.12",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "expect-type": "^0.13.0",
    "fast-glob": "^3.2.7",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "hongluan-business-ui": "^4.2.0",
    "hongluan-ui": "^2.2.3",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "jsdom": "16.4.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-esbuild": "^4.6.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.31.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.49.9",
    "sucrase": "^3.20.3",
    "through2": "^4.0.2",
    "ts-jest": "^26.5.6",
    "ts-morph": "12.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "unplugin-vue-define-options": "^0.5.0",
    "vue": "^3.2.20",
    "vue-jest": "5.0.0-alpha.10",
    "vue-router": "^4.0.12",
    "vue-tsc": "^0.28.10"
  }
}
